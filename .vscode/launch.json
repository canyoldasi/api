{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Nest Framework",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "start:debug",
          "--",
          //"--inspect-brk"
        ],
        "autoAttachChildProcesses": true,
        "restart": false,
        "sourceMaps": true,
        "stopOnEntry": false,
        "console": "integratedTerminal",
        "outFiles": [
          "${workspaceFolder}/**/*.(m|c|)js",
          "!**/node_modules/**"
        ]
      }
    ]
}